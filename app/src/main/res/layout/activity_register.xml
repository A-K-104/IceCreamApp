<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Registration"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/reg_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:text="First Name"
            style="@android:style/TextAppearance.DeviceDefault.Small"/>

        <EditText
            android:id="@+id/reg_name_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"/>
        <TextView
            android:id="@+id/reg_last_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_marginLeft="100dp"
            style="@android:style/TextAppearance.DeviceDefault.Small"/>

        <EditText
            android:id="@+id/reg_last_name_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ems="10"/>
        <TextView
            android:id="@+id/reg_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginLeft="100dp"
            style="@android:style/TextAppearance.DeviceDefault.Small"/>

        <EditText
            android:id="@+id/reg_email_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:ems="10" />
        <TextView
            android:id="@+id/reg_date_of_birth_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date of birth"
            android:layout_marginLeft="100dp"
            style="@android:style/TextAppearance.DeviceDefault.Small"/>

        <DatePicker
            android:id="@+id/reg_date_of_birth_picker"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />

        <TextView
            android:id="@+id/reg_gender_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_marginLeft="100dp"
            style="@android:style/TextAppearance.DeviceDefault.Small"/>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center">
            <Switch
                android:id="@+id/reg_gender_sw"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="female"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/reg_gender_male_tv"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="male"
                android:textColor="@color/black"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/reg_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:layout_marginLeft="100dp" />

        <EditText
            android:id="@+id/reg_password_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textWebPassword"
            android:ems="10" />
        <Button
            android:id="@+id/reg_bt_resistor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Resistor" />
        <TextView
            android:id="@+id/reg_tv_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Already Registered? Login here"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#3F51B5"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>