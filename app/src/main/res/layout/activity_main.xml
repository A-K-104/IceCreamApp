<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="my last order"
        style="@android:style/TextAppearance.DeviceDefault.Large"
        android:textStyle="bold"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="90dp"
            android:text="flavor: "
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textStyle="bold"
            android:layout_gravity="center"/>
    <TextView
        android:id="@+id/tv_last_order_flavor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="no order found!"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="status of order: "
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_last_order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no order found!"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:text="date of ordering: "
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textStyle="bold"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_last_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="no order found!"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_gravity="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/buy_bt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:text="buy ice cream"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/next_order_bt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:text="next order"/>
        <Button
            android:id="@+id/previous_order_bt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:text="previous order"/>
    </LinearLayout>


    <Button
        android:id="@+id/about_bt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        style="@android:style/TextAppearance.DeviceDefault.Small"
        android:text="about" />



</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>